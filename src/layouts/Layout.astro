---
import Header from "../components/Header.astro";
const { pathname } = Astro.url;

const normalizePath = (path: string) => path.replace(/\/$/, "");

const normalizedPath = normalizePath(pathname);

const pageBackgrounds: { [key: string]: string } = {
  "/Elia-Utsav/kashmir": "bg-[#d8d2d4]",
  "/Elia-Utsav/kerala": "bg-[#cecdcb]",
  "/Elia-Utsav/maharashtra": "bg-[#b4c5cf]",
  "/Elia-Utsav/madhypradesh": "bg-[#bcb5ad]",
};
const backgroundClass = pageBackgrounds[normalizedPath] || "bg-[#d8d2d4]";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Elia Utsav</title>
  </head>
  <body class=`${backgroundClass} flex flex-col items-center`>
    <Header />

    <slot />
    <div class="w-full text-[0.75rem] flex justify-between p-2 lg:w-[50%]">
      <a href="/Elia-Utsav-NGO/kashmir">Kashmir</a>
      <a href="/Elia-Utsav-NGO/kerala">Kerala</a>
      <a href="/Elia-Utsav-NGO/madhyapradesh">Madhya Pradesh</a>
      <a href="/Elia-Utsav-NGO/nagaland">Nagaland</a>
      <a href="/Elia-Utsav-NGO/maharashtra">Maharashtra</a>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
